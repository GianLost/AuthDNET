@using AuthDNetLib.Interfaces.Users.Session
@using AuthDNetLib.Models.Users

@inject ISessionMenager<TUser> SessionMenager

<ul class="navbar-nav">

    <li class="nav-item">
        <a class="nav-link" asp-area="Auth" asp-action="Register" asp-controller="User"><i class="bi bi-person-vcard-fill"></i> Register</a>
    </li>

    @if (await SessionMenager.GetSessionAsync() != null)
    {
        <li class="nav-item">
            <a class="nav-link door red-tooltip" asp-area="Auth" asp-controller="Login" asp-action="Logout" data-bs-toggle="tooltip" data-bs-placement="left" title="Clique para sair ..."><i class="bi bi-door-closed-fill"></i> Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link door" asp-area="Auth" asp-controller="Login" asp-action="SignIn"><i class="bi bi-door-closed-fill"></i> Login</a>
        </li>
    }

</ul>