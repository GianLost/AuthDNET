{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "AuthenticatorConnection": "AUTHENTICATOR_CONNECTION_STRING"
  },

  "Session": {
    "IdleTimeout": 20,
    "CookieName": "Authenticator.Session",
    "HttpOnly": true,
    "IsEssential": true
  },

  "CookiePolicy": {
    "CheckConsentNeeded": true,
    "MinimumSameSitePolicy": "Strict"
  },


  "JwtConfig": {
    "Secret": "your_very_secure_and_random_secret_key",
    "Issuer": "https://localhost:7258/",
    "Audience": "https://localhost:7258/"
  },

  "AllowedHosts": "*"
}